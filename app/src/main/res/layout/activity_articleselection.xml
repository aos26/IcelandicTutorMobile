<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/dictionarySelection_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeArticles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Articles"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pleaseSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Please select an article below"
                android:textSize="16sp" />

            <Button
                android:id="@+id/Theater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Theater under Arnarh'oll" />

            <Button
                android:id="@+id/HildurWins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hildur wins Oscar for score to Joker" />

            <Button
                android:id="@+id/visitReykjavik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website makes visiting Reykjavik easy" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="@id/card"
        />
</androidx.constraintlayout.widget.ConstraintLayout>